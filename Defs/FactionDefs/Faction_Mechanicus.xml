<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <FactionDef Class="FactionColors.FactionDefUniform">
    <defName>Mechanicus</defName>
    <label>Mechanicum Expedition</label>
    <description>The Priests of Mars are the single institution that's allowed to gain, store and manage technological knowledge. They are largely independent and anyone who gets on their bad side will find themselves lacking the tech to survive.</description>
    <pawnsPlural>techpriests</pawnsPlural>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <fixedName>Mechanicus</fixedName>
    <canSiege>true</canSiege>
    <canStageAttacks>true</canStageAttacks>
		<raidCommonalityFromPointsCurve>
			<points>
				<li>(1000, 0.4)</li>
				<li>(2500, 1)</li>
			</points>
		</raidCommonalityFromPointsCurve>
    <techLevel>Ultra</techLevel>
    <backstoryCategory>Civil</backstoryCategory>
    <leaderTitle>Prime Hermeticon</leaderTitle>
    <hidden>true</hidden>
    <hairTags>
      <li>Urban</li>
    </hairTags>
    <apparelStuffFilter>
      <thingDefs>
        <li>Hyperweave</li>
      </thingDefs>
    </apparelStuffFilter>
    <startingGoodwill>
      <min>0</min>
      <max>10</max>
    </startingGoodwill>
    <naturalColonyGoodwill>
      <min>-100</min>
      <max>100</max>
    </naturalColonyGoodwill>
    <pawnGroupMakers>
      <li>
        <kindDef>Normal</kindDef>
        <options>
            <MEC_CombatServitor>150</MEC_CombatServitor>
            <MEC_SkitariusStalker>50</MEC_SkitariusStalker>
            <MEC_SkitariusRanger>100</MEC_SkitariusRanger>
            <MEC_Techpriest>10</MEC_Techpriest>
        </options>
      </li>
      <li>
        <kindDef>Trader</kindDef>
        <traders>
          <MEC_Techpriest>1</MEC_Techpriest>
        </traders>
        <carriers>
          <Muffalo>1</Muffalo>
        </carriers>
        <guards>
          <MEC_SkitariusStalker>100</MEC_SkitariusStalker>
          <MEC_CombatServitor>250</MEC_CombatServitor>
        </guards>
      </li>
    </pawnGroupMakers>
    <FactionColor1>RGBA(0.75,0.0,0.0,1)</FactionColor1>
    <FactionColor2>RGBA(0.61,0.57,0.36,1)</FactionColor2>
  </FactionDef>  
</Defs>