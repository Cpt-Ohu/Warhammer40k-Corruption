  <RecipeDef ParentName="SurgeryFlesh">
		<defName>TurnIntoServitor_MSU</defName>
		<label>turn into servitor</label>
		<description>Turns this pawn into a semi-organic robot for performing simple tasks.</description>
		<workerClass>Recipe_InstallImplant</workerClass>
		<jobString>Creating Servitor.</jobString>
		<workAmount>4500</workAmount>
    <surgerySuccessChanceFactor>0.7</surgerySuccessChanceFactor>
    <deathOnFailedSurgeryChance>0.25</deathOnFailedSurgeryChance>
		<ingredients>
			<li>
				<filter>
          <categories>
						<li>Medicine</li>
					</categories>
				</filter>
				<count>5</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>ServitorImplants</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Component</li>
					</thingDefs>
				</filter>
				<count>2</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
      <categories>
        <li>Medicine</li>
      </categories>
      <exceptedThingDefs>
        <li>HerbalMedicine</li>
      </exceptedThingDefs>
		</fixedIngredientFilter>
		<skillRequirements>
			<li>
				<skill>Medicine</skill>
				<minLevel>14</minLevel>
			</li>
		</skillRequirements>
		<addsHediff>ServitorImplants</addsHediff>
  </RecipeDef>

