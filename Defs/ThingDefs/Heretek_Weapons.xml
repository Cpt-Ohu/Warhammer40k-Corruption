    </verbs>
    <TickerType>Rare</TickerType>
    <comps>
      <li Class="Corruption.CompProperties_SoulItem">
        <compClass>Corruption.CompSoulItem</compClass>
        <Category>Corruption</Category>
        <GainRate>1000.0</GainRate>
      </li>
    </comps>
