  <ThingDef ParentName="HatBase" Class="FactionColors.ApparelUniformDef">
    <thingClass>FactionColors.ApparelUniform</thingClass>
    <defName>IG_Helm</defName>
    <label>imperial guard helmet</label>
    <description>A lightweight combat helmet.</description>
    <graphicData>
      <texPath>Things/IG/IG_Helm/IG_Helm</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <MarketValue>300</MarketValue>
      <ArmorRating_Blunt>0.2</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.35</ArmorRating_Sharp>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>0.0</MoveSpeed>
    </equippedStatOffsets>
	<generateCommonality>2</generateCommonality>
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/IG/IG_Helm</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>IG_STApp</li>
      </tags>
      <defaultOutfitTags>
        <li>IG_STApp</li>
      </defaultOutfitTags> 
   </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>RGBA(1.00,1.00,1.00,1)</only>
        </li>
      </options>
    </colorGenerator>

    <comps>
      <li Class="FactionColors.CompProperties_FactionColor">
        <compClass>FactionColors.CompFactionColor</compClass>
        <IsRandomMultiGraphic>true</IsRandomMultiGraphic>
      	<RandomGraphicPaths>
        		<li>
 	       		<first>IG_Helm</first> 	       					<second>20</second>
			</li>
        		<li>
 	       		<first>IG_Helm_Gas_Gog</first> 	       				<second>5</second>
			</li>
        		<li>
 	       		<first>IG_Helm_Gog</first> 	       					<second>10</second>
			</li>
        		<li>
 	       		<first>IG_Helm_Gog_Strap</first> 	       				<second>10</second>
			</li>
      	</RandomGraphicPaths>
      </li>
    </comps>
  </ThingDef>


