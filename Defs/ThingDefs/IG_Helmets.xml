<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="HatBase">
    <defName>IG_ComCap</defName>
    <label>commissar cap</label>
    <description>The official cap of an Imperial Commissar. The bigger the better.</description>
    <graphicData>
      <texPath>Things/IG/ComCap/ComCap</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <MarketValue>300</MarketValue>
      <ArmorRating_Blunt>0.2</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.35</ArmorRating_Sharp>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>0.0</MoveSpeed>
    </equippedStatOffsets>
	<generateCommonality>2</generateCommonality>
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/IG/ComCap/ComCap</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>IG</li>
      </tags>
      <defaultOutfitTags>
        <li>IG_Soldier</li>
      </defaultOutfitTags> </apparel>
  </ThingDef>

