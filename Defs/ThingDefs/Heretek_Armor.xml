<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  <ThingDef ParentName="HatBase">
    <thingClass>FactionColors.ApparelUniform</thingClass>
    <defName>Heretic_Helmet</defName>
    <label>guard helmet</label>
    <description>A lightweight combat helmet.</description>
    <graphicData>
      <texPath>Things/Chaos/Damned/DamnedHelmetAIcon</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <tradeability>Sellable</tradeability>
    <statBases>
      <Mass>1</Mass>
      <MaxHitPoints>150</MaxHitPoints>
      <MarketValue>300</MarketValue>
      <ArmorRating_Blunt>0.2</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.35</ArmorRating_Sharp>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>0.0</MoveSpeed>
    </equippedStatOffsets>
	<generateCommonality>2</generateCommonality>
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Chaos/DamnedHelmet</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>CorruptedApparel</li>
      </tags>
      <defaultOutfitTags>
        <li>CorruptedApparel</li>
      </defaultOutfitTags> 
   </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>RGBA(1.00,1.00,1.00,1)</only>
        </li>
      </options>
    </colorGenerator>

    <comps>
      <li Class="FactionColors.CompProperties_FactionColor">
        <compClass>FactionColors.CompFactionColor</compClass>
        <IsRandomMultiGraphic>true</IsRandomMultiGraphic>
      	<RandomGraphicPaths>
        		<li>
 	       		<first>DamnedHelmetA</first> 	       					<second>10</second>
			</li>
        		<li>
 	       		<first>DamnedHelmetB</first> 	       				<second>10</second>
			</li>
        		<li>
 	       		<first>DamnedHelmetC</first> 	       					<second>10</second>
			</li>
      	</RandomGraphicPaths>
      </li>
    </comps>
  </ThingDef>

