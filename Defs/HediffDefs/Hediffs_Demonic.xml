<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef Name="HediffDemonicPossesion" Abstract="True">
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.8, 0.8, 0.35)</defaultLabelColor>
    <minSeverity>0.001</minSeverity>
    <maxSeverity>1</maxSeverity>
    <initialSeverity>0.001</initialSeverity>
    <lethalSeverity>0.99</lethalSeverity>

    <comps>
      <li Class="HediffCompProperties_Discoverable">
        <compClass>HediffComp_Discoverable</compClass>
        <sendLetterWhenDiscovered>false</sendLetterWhenDiscovered>
      </li>
    </comps>
  </HediffDef>

  <HediffDef>
    <defName>DemonicPossession</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.73, 0.08, 0.03)</defaultLabelColor>
    <label>strange affliction</label>
    <comps>
      <li>
        <compClass>Corruption.HediffComp_DemonicPossession</compClass>
      </li>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>0.25</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <painOffset>0.0</painOffset>
        <label>increased vigor</label>
        <restFallFactor>0.8</restFallFactor>
        <hungerRateFactor>1.5</hungerRateFactor>
        <opinionOfOthersFactor>0.9</opinionOfOthersFactor>
        <capMods>
          <li>
            <capacity>Manipulation</capacity>
            <offset>0.2</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>0.1</offset>
          </li>
          <li>
            <capacity>BloodPumping</capacity>
            <offset>0.2</offset>
          </li>
          <li>
            <capacity>Metabolism</capacity>
            <offset>0.2</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.2</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.2</minSeverity>
        <label>changed behaviour</label>
        <painOffset>0.1</painOffset>
        <restFallFactor>0.6</restFallFactor>
        <hungerRateFactor>2.0</hungerRateFactor>
        <opinionOfOthersFactor>0.6</opinionOfOthersFactor>
        <socialFightChanceFactor>2.0</socialFightChanceFactor>
        <capMods>
          <li>
            <capacity>Manipulation</capacity>
            <offset>0.3</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>0.2</offset>
          </li>
          <li>
            <capacity>BloodPumping</capacity>
            <offset>0.5</offset>
          </li>
          <li>
            <capacity>Metabolism</capacity>
            <offset>0.2</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.2</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.6</minSeverity>
        <label>weird behaviour</label>
        <painOffset>0.3</painOffset>
        <restFallFactor>0.4</restFallFactor>
        <hungerRateFactor>3.0</hungerRateFactor>
        <opinionOfOthersFactor>0.5</opinionOfOthersFactor>
        <socialFightChanceFactor>2.5</socialFightChanceFactor>
        <capMods>
          <li>
            <capacity>Manipulation</capacity>
            <offset>0.4</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>0.3</offset>
          </li>
          <li>
            <capacity>BloodPumping</capacity>
            <offset>0.7</offset>
          </li>
          <li>
            <capacity>Metabolism</capacity>
            <offset>0.5</offset>
          </li>
          <li>
            <capacity>BloodFiltration</capacity>
            <offset>0.5</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.3</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.8</minSeverity>
        <label>signs of possession</label>
        <painOffset>0.6</painOffset>
        <restFallFactor>0.0</restFallFactor>
        <hungerRateFactor>3.5</hungerRateFactor>
        <opinionOfOthersFactor>0.2</opinionOfOthersFactor>
        <socialFightChanceFactor>3.5</socialFightChanceFactor>
        <capMods>
          <li>
            <capacity>Manipulation</capacity>
            <offset>0.4</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>0.3</offset>
          </li>
          <li>
            <capacity>BloodPumping</capacity>
            <offset>0.9</offset>
          </li>
          <li>
            <capacity>Metabolism</capacity>
            <offset>0.9</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.3</offset>
          </li>
          <li>
            <capacity>BloodFiltration</capacity>
            <offset>0.8</offset>
          </li>
        </capMods>
      </li>
    </stages>

  </HediffDef>

  <HediffDef Abstract="True">
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.8, 0.8, 0.35)</defaultLabelColor>
    <comps>
      <li Class="HediffCompProperties_Discoverable">
        <compClass>HediffComp_Discoverable</compClass>
        <sendLetterWhenDiscovered>false</sendLetterWhenDiscovered>
      </li>
    </comps>
  </HediffDef>

</Defs>